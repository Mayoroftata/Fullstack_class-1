<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>

    <link rel="stylesheet" href="style.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    <%- include('../partials/header') %>
    <table>
        <thead>
            <tr>
                <th>S/N</th>
                <th>User</th>
                <th>Github Link</th>
                <th>Github Repo Link</th>
            </tr>
        </thead>
        <tbody>
            <% userData.forEach(user => { %>  
            <tr>
                <td style="font-weight: bold;"><%= user.id %></td>
                <td style="display: flex; align-items: center; gap: 20px; text-transform: capitalize;">
                    <img src="<%= user.avatar_url %>" alt="avatar" style="width: 50px; height: 50px; border-radius: 100%;">
                    <h3><%= user.login %></h3>
                </td>
                <td>
                    <a class="btn btn-outline-secondary rounded-pill" href="<%= user.html_url %>">My Profile</a>
                </td>
                <td>
                    <a class="btn btn-outline-primary rounded-pill" href="<%= user.repos_url %>">My Repos</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
